<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
     <%- include('../partials/head.html.ejs') %>
  </head>
  <body>
    <!-- NAV -->
    <nav>
      <%- include('../partials/nav.html.ejs') %>
    </nav><br />

    <!-- INPUT FORM -->
    <div class="container new-log-container">
      <h1>Log New Workout</h1>
      <div class="d-flex flex-row justify-content-around">
      <div class="sidebar"><h3>WORK YOUR WAY TO A FIGHTER'S PHYSIQUE</h3></div>
      <div class="newlog">
        <form action="/workouts" method="POST">
          <div class="form-group">
            <label for="date">DATE:</label>
            <input type="text" name="date" required />
            <label for="activity">ACTIVITY:</label>
            <input type="text" name="activity" required />
            <label for="type">TYPE:</label>
            <select class="form-control-lg" id="activity-select" name="type">
              <option value="cardio">cardio</option>
              <option value="strength training">strength training</option>
              <option value="flexibility training">flexibility training</option>
            </select>
            <!-- <input type="text" name="type" placeholder="cardio | strength training | flexibility training" required /> -->
            <label for="weight">CURRENT WEIGHT:</label>
            <input type="text" name="weight" placeholder="in lbs" required />
            <label for="time">TIME SPENT EXERCISING:</label>
            <input type="text" name="time" placeholder="in minutes" required />
            <br>
            <input type="submit" value="ADD" class="add-btn" />
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- FOOTER -->
  <footer class="page-footer">
  <%- include('../partials/footer.html.ejs') %>
  </footer>
  </body>
</html>
