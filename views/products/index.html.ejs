<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.html.ejs') %>
  </head>
  <body>
    <nav>
      <%- include('../partials/nav.html.ejs') %>
    </nav><br />
    <!-- MAIN -->
        <div class="container">
          <h4>Level up your workout with some new gear.</h4>
          <div class="row row-cols-2">
            <% for(let i = 0; i < products.length; i++){ %>
            <div class="col mb-2">
                <div class="card product-card h-100">
                  <div class="card-body">
                    <h2><%=products[i].name; %></h2>
                    <!-- <a href="/products/<%=products[i].id; %>">
                    <%=products[i].name; %></a> -->
                    <img src=<%=products[i].img;%> class="card-img products-img"><br/>
                    <%=products[i].description; %><br/>
                    PRICE: $<%=products[i].price; %><br/>
                    <% if (products[i].qty <= 0) {%>
                         OUT OF STOCK
                      <% } else {%>
                      IN STOCK: <%=products[i].qty%>
                      <form action="/products/<%=products[i].id; %>?_method=PATCH" method="POST">
                          <input type="submit" value="BUY" class="buy-btn"/>
                      </form>
                      <% } %>
                 </div>
              </div>

            </div>
<% } %>
          </div>
          </div>
        </div>


      <!-- FOOTER -->
      <footer class="page-footer">
      <%- include('../partials/footer.html.ejs') %>
      </footer>

  </body>
</html>
